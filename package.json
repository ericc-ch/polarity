{
  "name": "polarity",
  "version": "0.0.0",
  "description": "Polarity - a real-time multiplayer game",
  "type": "module",
  "scripts": {
    "db:generate": "drizzle-kit generate",
    "dev": "alchemy dev",
    "format": "prettier --write .",
    "lint": "oxlint --type-aware",
    "prepare": "simple-git-hooks && effect-language-service patch && konteks sync",
    "test": "vitest",
    "typecheck": "tsc --build"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm run format",
    "pre-push": "pnpm run typecheck && pnpm run test && pnpm run lint"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "catalog:cloudflare",
    "@effect/language-service": "catalog:effect",
    "@libsql/client": "catalog:default",
    "@types/node": "catalog:default",
    "alchemy": "^0.84.0",
    "api": "workspace:*",
    "dotenv": "^17.3.1",
    "drizzle-kit": "catalog:drizzle",
    "effect": "catalog:effect",
    "konteks": "^0.0.7",
    "oxlint": "^1.48.0",
    "oxlint-tsgolint": "^0.14.0",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "simple-git-hooks": "^2.13.1",
    "typescript": "catalog:default",
    "vitest": "catalog:vite",
    "wrangler": "catalog:cloudflare"
  },
  "packageManager": "pnpm@10.30.0",
  "comments": [
    "I added wrangler here is because of deps, alchemy has mismatching version required with @cloudflare/vite-plugin. This forces wrangler to be a specific version"
  ]
}
